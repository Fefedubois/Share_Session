
<div class="container">
    <div class="colonnes_2">
      <div class="colonne_gauche">
        <% @spots.each do |spot| %>
        <div class="card" style="width: 18rem;">
         <% if spot.image.attached? %>
          <%= image_tag spot.image %>
         <% else %>
          <img src="https://images.unsplash.com/photo-1616449973117-0e1d99c56ed3?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8OHx8c3VyZnxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=500&q=60" class="card-img-top">
         <% end %>
          <div class="card-body">
            <h5 class="card-title"><h2><%= spot.name.capitalize %></h2> </h5>
            <h4><%= spot.country%> </h4>
            <p class="card-text"><%= spot.description.first(70) %>...</p>
            <div class="text-center">
                <% link_to 'Mettre Ã  jour', edit_spot_path(@spots) %>
                <%= link_to 'Voir le spot', spot, class: "btn btn-outline-primary" %>
                <% link_to 'Supprimer', @spot, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
          </div>
        </div>
          <% end %>
        </div>
        <div class="colonne_droite">
          <div id="map" style="width: 100%; height: 600px;"
            data-controller="mapbox"
            data-mapbox-markers-value="<%= @markers.to_json %>"
            data-mapbox-api-key-value="<%= ENV["MAPBOX_API_KEY"] %>"></div>
        </div>
    </div>
</div>
